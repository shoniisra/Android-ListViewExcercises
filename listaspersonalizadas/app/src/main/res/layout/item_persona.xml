<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagen1"
        android:layout_width="80dp"
        android:layout_height="60dp"
    app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_persona_nombre"
            android:layout_width="wrap_content"
            android:textColor=" #7ca5c1 "
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="nombre" />

        <TextView
            android:id="@+id/tv_item_persona_direccion"
            android:textColor=" #7ca5c1 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="direccion" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:textColor=" #7ca5c1 "
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_persona_cedula"
                android:textColor=" #7ca5c1 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"

                android:text="cedula" />

            <TextView
                android:id="@+id/tv_item_persona_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor=" #7ca5c1 "

                android:layout_marginHorizontal="10dp"
                android:text="telefono" />

            <TextView
                android:id="@+id/tv_item_persona_edad"
                android:layout_width="wrap_content"
                android:textColor=" #7ca5c1 "
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="10dp"
                android:text="edad" />
        </LinearLayout>


    </LinearLayout>


</android.widget.LinearLayout>